	<body >
		<form class="form-signin" action="/" method="POST">
		<label for="inputPassword" class="sr-only">Password</label>
		<input type="password" id="inputPassword" name="password" class="form-control{{ if .Message }} invalid{{ end }}" placeholder="Password" required>
		<button class="btn btn-lg btn-primary btn-block" type="submit" style="visibility: hidden;">Log in</button>
		</form>
